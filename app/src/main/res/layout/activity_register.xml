<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    tools:context="com.sendi.picture_recognition.controller.activity.RegisterActivity">

    <TextView
        style="@style/Register_TV_style"
        android:text="用户名："
        />

    <EditText
        android:id="@+id/et_register_user_name"
        android:inputType="textEmailAddress"
        style="@style/Register_ET_style"/>

    <TextView
        style="@style/Register_TV_style"
        android:text="密码："
        />

    <EditText
        android:id="@+id/et_register_psw"
        style="@style/Register_ET_style"
        android:inputType="textPassword"
        />

    <TextView
        style="@style/Register_TV_style"
        android:text="性别："
        />

    <EditText
        android:id="@+id/et_register_sex"
        style="@style/Register_ET_style"/>


    <TextView
    style="@style/Register_TV_style"
    android:text="喜欢的事物："/>

    <EditText
    android:id="@+id/et_register_like"
    style="@style/Register_ET_style"/>
    <TextView
        style="@style/Register_TV_style"
        android:text="手机号码："
        />

    <EditText
        android:id="@+id/et_register_phone_number"
        android:inputType="phone"
        style="@style/Register_ET_style"/>

    <TextView
        style="@style/Register_TV_style"
        android:text="验证码："/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/et_register_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:inputType="number"
            android:background="@drawable/login_et_shape"
            android:padding="10dp"
            />

        <Button
            android:id="@+id/bt_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_bg_shape"
            android:onClick="getCode"
            android:text="获取验证码"
            android:textColor="@color/colorWhite"
            />
    </LinearLayout>

    <Button
        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="20dp"
        android:onClick="register"
        android:background="@drawable/button_bg_shape"
        android:textColor="@color/colorWhite"
        android:text="注册"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="toLogin"
        android:text="前去登录"
        android:textColor="@color/colorTheme"
        android:background="@null"
        />
</LinearLayout>
