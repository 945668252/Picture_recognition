<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background3"
    tools:context="com.sendi.picture_recognition.controller.activity.GradeActivity">
    <!--android:background="#aa030303"-->
    <RelativeLayout
    android:background="#aa2e2e2e"
    android:id="@+id/activity_grade"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sendi.picture_recognition.controller.activity.GradeActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableLeft="@mipmap/back"
    android:drawablePadding="5dp"
    android:text="返回"
    android:textColor="@color/colorWhite"
    android:gravity="center"
    android:layout_margin="10dp"
    android:onClick="back"
    />

<com.sendi.picture_recognition.widget.ProgressCircle
    android:id="@+id/pc"
    android:layout_width="220dp"
    android:layout_height="220dp"
    android:layout_centerInParent="true"
    app:progress_total="200"
    ></com.sendi.picture_recognition.widget.ProgressCircle>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_centerInParent="true"
      android:gravity="center"
      >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/colorWhite"
          android:textStyle="bold"
          android:textSize="25sp"
          android:text="我的积分"
          />
      <TextView
          android:id="@+id/tv_grade"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/colorWhite"
          android:textStyle="bold"
          android:layout_marginTop="5dp"
          android:textSize="22sp"
          android:text="10"
          />
  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/pc"
        android:layout_marginTop="30dp"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="当前等级："
            />
            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:text="菜鸟"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
</RelativeLayout>